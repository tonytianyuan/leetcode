{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug C++ Program",      // 配置名称
            "type": "cppdbg",                 // 调试器类型
            "request": "launch",              // 启动模式
            "program": "${workspaceFolder}/${fileBasenameNoExtension}",// 可执行程序路径
            "args": [],                       // 程序参数
            "stopAtEntry": false,             // 是否在程序入口暂停
            "cwd": "${workspaceFolder}",          // 设置工作目录
            "environment": [],
            "externalConsole": true,          // 是否使用外部控制台（可以去掉）
            "MIMode": "gdb",                  // 使用 gdb 调试
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb", // gdb 路径
            "preLaunchTask": "build and run", // 运行任务名称
            "miDebuggerArgs": "",             // 额外的 gdb 参数
            "logging": {
                "engineLogging": false
            }
        }
    ]
}
